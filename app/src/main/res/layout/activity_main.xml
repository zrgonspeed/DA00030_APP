<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <com.bike.ftms.app.widget.HorizontalViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom" />

    <RelativeLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_387E2F">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_version_apk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_35"
            android:text="1.0.3 beta3 2077-88-99"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/btn_workout_login"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/btn_bluetooth"
            android:src="@drawable/btn_to_login"
            android:visibility="gone" />


        <!--已登录， 显示用户名和头像-->
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="-90dp"
            android:layout_toStartOf="@id/btn_workout_user_info"
            android:text="鲁班8号"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/btn_workout_user_info"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/btn_bluetooth"
            android:paddingStart="90dp"
            android:src="@drawable/user_header_def_2" />

        <ImageView
            android:id="@+id/btn_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/btn_setting"
            android:src="@drawable/btn_bluetooth" />

        <ImageView
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/btn_setting" />


        <ImageView
            android:id="@+id/iv_page"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/page1" />
    </RelativeLayout>

</RelativeLayout>