<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.setting.SettingActivity">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F5F5F5"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_back"
            android:text="@string/setting_back"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_settings"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintWidth_percent="0.9">


        <ImageView
            android:id="@+id/iv_setting_login"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_setting_bluetooth"
            android:layout_alignStart="@id/iv_setting_bluetooth"
            android:src="@drawable/btn_setting_login"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_setting_bluetooth"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_toStartOf="@id/v_line"
            android:src="@drawable/btn_setting_bluetooth" />

        <View
            android:id="@+id/v_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/iv_setting_hr"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_toEndOf="@id/v_line"
            android:src="@drawable/btn_setting_hr" />

        <ImageView
            android:id="@+id/iv_setting_version"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_setting_hr"
            android:layout_alignStart="@id/iv_setting_hr"
            android:layout_toEndOf="@id/iv_setting_hr"
            android:src="@drawable/btn_setting_version" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>