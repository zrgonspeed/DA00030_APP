<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_first_name"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/dp_200" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_last_name"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/dp_200" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_gender"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/dp_200" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_150">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_birth"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/dp_200" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_200">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="firstname"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/dp_200" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_250">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="firstname"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/dp_200" />
    </LinearLayout>
</RelativeLayout>